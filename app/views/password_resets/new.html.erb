<div class="col-md-4 center-block clearfix" style="float: none; padding: 20px 0;" >
<h4 style="float:left;">Reset your password</h4>
<h5 style="float:right;"><%= link_to 'Cancel', root_url %></h5> 
</div>
<%= form_for(:password_reset, url: password_resets_path) do |f| %>
  <div class="col-md-4 center-block form" style="float:none">
  <div class="login-form">    
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
</div>
  <div class="col-md-4 center-block" style="float:none; padding-top: 20px;">
    <%= f.submit 'SUBMIT', :class=>'btn right-align btn-dark-grey'%>
  </div>
<% end %>

<%= form_for @brand do |f| %>
	<div class="col-md-4 center-block form" style="float:none">
		<h2>New brand</h2></br>
		<div class="login-form">    
		    <% if @brand.errors.any? %>        
		      <% for message in @brand.errors.full_messages %>
		           <% flash.now[:danger] = message %>
		      <% end %>
		    <% end %> 
		    <div class="form-group">
		      <%= f.label :name %><br />
		      <%= f.text_field :name, class: "form-control" %>
		    </div>
		</div></br>
	      <%= f.submit 'CREATE BRAND', :class=>'btn btn-dark-grey'%>
	      <%= link_to 'CANCEL', admin_path ,:class=>'btn btn-default right-align'%>
	</div>
<% end %>
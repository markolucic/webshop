<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<nav class="navbar myNav navbar-fixed-top">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="col-md-8 center-block" style="float: none;">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="<%= root_path %>">abhShoes<span class="glyphicons glyphicon-shoe-steps"></span></a>
	    </div>
	    <ul class="nav navbar-nav navbar-left">
		    <% Category.all.each do |c| %> <!-- SMISLITI BOLJI NACIN -->
    			<li><%= link_to c.name, c %></li>
    		<% end %>
		</ul>
		  <ul class="nav navbar-nav navbar-right">
		  	<% if logged_in? %>
		  		<li><%= link_to 'Logout', logout_path, method: :delete %></li>
		  	<% else %>
		    	<li><%= link_to 'Login', login_path %></li>
		    <% end %>
		    <li class="divider-vertical"></li>
		    <% if current_user %>
		    	<li><%= link_to 'Profile', edit_user_path(current_user) %></li>
		    <% else %>
		    	<li><%= link_to 'Register', signup_path %></li>
		    <% end %>
		    <% if logged_in? && current_user.is_admin? %>
		    	<li> <%= link_to '', '#', class: 'glyphicon glyphicon-cog' %></li>
		    <% else %>
		    	<li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span><span class="items">0</span></a></li>
		    <% end %>
		  </ul>
		</div>
	  </div><!-- /.container-fluid -->
	</nav>
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

      <div class="item active">
        <img src="http://www.twitrcovers.com/wp-content/uploads/2014/01/Converse-Bokeh-Shoes-l.jpg" alt="Chania">
      </div>

      <div class="item">
        <img src="http://www.twitrcovers.com/wp-content/uploads/2013/11/Fences-Shoes-l.jpg" alt="Chania">
      </div>
    
      <div class="item">
        <img src="http://www.twitrcovers.com/wp-content/uploads/2012/12/Shoes-Grayscale-l.jpg" alt="Flower">
      </div>

      <div class="item">
        <img src="http://www.twitrcovers.com/wp-content/uploads/2014/03/Converse-Hearts-Love-Shoes-l.jpg" alt="Flower">
      </div>
  
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>

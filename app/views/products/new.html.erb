<%= form_for @product, html: { multipart: true } do |f| %>
	<div class="col-md-8 row center-block form" style="float:none">
		<h2>New product</h2></br>
		<div class="col-md-12 login-form">
			<div class="col-md-6 ">    
			    <% if @product.errors.any? %>        
			      <% for message in @product.errors.full_messages %>
			           <% flash.now[:danger] = message %>
			      <% end %>
			    <% end %> 
			    <div class="form-group">
			      <%= f.label :name %><br />
			      <%= f.text_field :name, class: "form-control" %>
			    </div>
			    <div class="form-group">
			      <%= f.label :description %><br />
			      <%= f.text_area :description, class: "form-control" %>
			    </div>
			    <div class="form-group">
			      <%= f.label :price %><br />
			      <%= f.number_field :price, class: "form-control", step: 0.01 %>
			    </div>
			    
			</div>
			<div class="col-md-6">
			    <%= f.label :image %><br />
				<%= f.file_field :img %>
			</div>
		</div>
	</div>
	<div class="col-md-3 col-md-offset-4">
	      <%= f.submit 'CREATE PRODUCT', :class=>'btn btn-dark-grey'%>
	      <%= link_to 'CANCEL', admin_path ,:class=>'btn btn-default right-align'%>
	</div>
<% end %>
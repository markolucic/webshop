<%= render 'navbar' %>

<%= link_to 'Add Size', new_size_path, class: 'btn btn-default'%>
<%= link_to 'Remove selected', '', :data => {confirm: 'Are you sure?'}, class: 'btn btn-default', onclick: 'deleteAll("size")'%>

<%= form_tag admin_sizes_path, :method => 'get' do %>
  <p class="search">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= check_box_tag 'sizes' %></th>
        <th>ID</th>
        <th>Size</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    	<% @sizes.each do |u| %>
			<tr>
            <td><%= check_box_tag 'checkbox_ids[]' %></td>
		        <td><%= u.id %></td>
		        <td><%= u.size %></td>
		        <td>
		        	<%= link_to '', edit_size_path(id: u.id),data_toggle: 'tooltip', title: 'Edit size', class: 'glyphicon glyphicon-pencil' %>
		        	<%= link_to '', size_path(id: u.id), :data => {confirm: 'Are you sure?'}, method: :delete, data_toggle: 'tooltip', title: 'Remove size', class: 'glyphicon glyphicon-trash' %>
		        </td>
		    </tr>
		<% end %>    
    </tbody>
  </table>	

  <%= will_paginate @sizes %>

 <script>
	$(document).ready(function(){
	    $('[data-toggle="tooltip"]').tooltip();
	});

  function deleteAlls(){
    var checkboxes = document.getElementsByName('user_ids[]');
    var ids = [];
    for(var i=0; i<checkboxes.length; i++)
    {
      if(checkboxes[i].checked == true)
      {
        ids.push(checkboxes[i].value);
      }
    }
    if(ids.length > 0)
    {
      $.ajax({
        type:"DELETE",
        url:"/user/destroy_selected",
        dataType:"html",
        data: {ids: ids},
        success:function()
        { 
        },
        error: function (){
          window.alert("Oops! Something wrong!");
        }
            });
    }
    else
      {
        window.alert('You have to select users!');
      }
  }
</script>


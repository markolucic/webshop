<%= render 'navbar' %>
<%= link_to 'Add User', new_user_path , class: 'btn btn-default'%>
<%= link_to 'Remove selected', '', :data => {confirm: 'Are you sure?'}, class: 'btn btn-default', onclick: 'deleteAll()'%>


<%= form_tag admin_users_path, :method => 'get' do %>
  <p class="search">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<table class="table table-bordered table-hover">
    <thead>
      <tr>
      	<th><%= check_box_tag :check_all %></th>
        <th>ID</th>
        <th>Email</th>
        <th>Registration Date</th>
        <th>Administrator</th>
        <th>Activated</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    	<% @users.each do |u| %>
			<tr>
				<td><input type="checkbox" name="user_ids[]" value="<%= u.id %>" /></td>
		        <td><%= u.id %></td>
		        <td><%= u.email %></td>
		        <td><%= u.created_at.strftime("%b %d, %Y") %></td>
		        <td><%= u.is_admin? ? 'Yes' : 'No' %></td>
		        <td><%= u.activated? ? 'Yes' : 'No' %></td>
		        <td>
		        	<%= link_to '', edit_user_path(id: u.id),data_toggle: 'tooltip', title: 'Edit user', class: 'glyphicon glyphicon-pencil' %>
		        	<%= link_to '', user_path(id: u.id), :data => {:confirm => 'Are you sure?'}, :method => :delete, data_toggle: 'tooltip', title: 'Remove user', class: 'glyphicon glyphicon-trash' %>
		        	<% if u.is_admin? %>
		        		<%= link_to '', '/user/demote/' + u.id.to_s, data_toggle: 'tooltip', title: 'Demote to user', class: 'glyphicon glyphicon-star-empty promote' %>
		        	<% else %>
		        		<%= link_to '', '/user/promote/' + u.id.to_s, data_toggle: 'tooltip', title: 'Promote to admin', class: 'glyphicon glyphicon-star demote' %>
		        	<% end %> 
		        	
		        </td>
		    </tr>
		<% end %>    
    </tbody>
  </table>	
  <%= will_paginate @users %>
 <script>
	$(document).ready(function(){
	    $('[data-toggle="tooltip"]').tooltip();
	});
	var clicked = true;
	$('#check_all').change(function () {

    	var checkboxes = document.getElementsByName('user_ids[]');
		
		if(clicked == true)
		{	for(var i=0; i< checkboxes.length; i++)
			{
				checkboxes[i].checked = true;
				clicked = false;
			}
		}
		else
		{
			for(var i=0; i< checkboxes.length; i++)
			{
				checkboxes[i].checked = false;
				clicked = true;
			}
		}
			
 	});

	function deleteAll(){
		var checkboxes = document.getElementsByName('user_ids[]');
		var ids = [];
		for(var i=0; i<checkboxes.length; i++)
		{
			if(checkboxes[i].checked == true)
			{
				ids.push(checkboxes[i].value);
			}
		}
		if(ids.length > 0)
		{
			$.ajax({
				type:"DELETE",
				url:"/user/destroy_selected",
				dataType:"html",
				data: {ids: ids},
				success:function()
				{ 
				},
				error: function (){
					window.alert("Oops! Something wrong!");
				}
            });
		}
		else
			{
				window.alert('You have to select users!');
			}
	}

</script>